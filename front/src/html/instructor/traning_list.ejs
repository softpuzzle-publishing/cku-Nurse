<!DOCTYPE html>
<html lang="ko">

<head>
    <%- include('../layout/_head.ejs')%>
</head>

<body>

    <div id="wrap">

        <%- include('../layout/_header.ejs')%>

        <div id="container-block">
            <div id="content">

                <div class="visual traning">
                    <div class="container">
                        <h1 class="title">비행운행실습</h1>
                    </div>
                </div>

                <div class="contents">
                    <div class="sub-nav">
                        <div class="subject">비행운행실습</div>
                        <div class="breadcrumb">
                            <ol>
                                <li><i class="icon-breadcrumb-home"></i></li>
                                <li>비행운행실습</li>
                            </ol>
                        </div>
                    </div>

                    <div class="inquery-area">
                        <table class="table table-bordered">
                            <colgroup>
                                <col style="width: 170px">
                                <col>
                            </colgroup>
                            <tbody>
                                <tr>
                                    <th>등록일</th>
                                    <td colspan="3">
                                        <div class="row row-10  align-items-center">
                                            <div class="col-auto">
                                                <input type="text" readonly="" class="form-control form-datepicker" placeholder="0000-00-00">
                                            </div>
                                            <div class="col-auto">~</div>
                                            <div class="col-auto">
                                                <input type="text" readonly="" class="form-control form-datepicker" placeholder="0000-00-00">
                                            </div>
                                            <div class="col">
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-outline-secondary">오늘</button>
                                                    <button type="button" class="btn btn-outline-secondary">어제</button>
                                                    <button type="button" class="btn btn-outline-secondary">3일</button>
                                                    <button type="button" class="btn btn-outline-secondary">7일</button>
                                                    <button type="button" class="btn btn-outline-secondary">15일</button>
                                                    <button type="button" class="btn btn-outline-secondary">1개월</button>
                                                    <button type="button" class="btn btn-outline-secondary">3개월</button>
                                                    <button type="button" class="btn btn-outline-secondary active">6개월</button>
                                                    <button type="button" class="btn btn-outline-secondary">전체</button>
                                                </div>
                                                <script>
                                                    $('.btn-group .btn').on('click', function(e) {
                                                        $(this).siblings().removeClass('active');
                                                        $(this).addClass('active');
                                                    });
                                                </script>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>검색</th>
                                    <td colspan="3">
                                        <input type="text" class="form-control" placeholder="학번, 이름, 교관으로 검색">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="btns">
                            <button class="btn btn-primary">검색</button>
                        </div>
                    </div>

                    <div class="list-title-wrap">
                        <div>
                            <i class="icon-list-title"></i>
                            <p class="title">학생목록</p>
                            <p class="total">Total : 000 </p>
                            <p class="page">Page 1/3 </p>
                        </div>
                        <div>
                            <button  type="button" class="btn btn-outline-light width-140px">
                                엑셀다운로드
                                <i class="icon-excel m-l-10"></i>
                            </button>
                            <select name="" id="" class="form-control width-90px">
                                <option value="">50</option>
                            </select>
                        </div>
                    </div>

                    <div class="main_search_result_list">
                        <!-- softpuzzle에서 쓰는 datatable 고정 클래스명 -->
                        <table class="table table-bordered" id="datatable1">
                            <colgroup>
                                <col style="width:60px;">
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>번호</th>
                                    <th>학년</th>
                                    <th>학번</th>
                                    <th>이름</th>
                                    <th>생년월일</th>
                                    <th>성별</th>
                                    <th>처음 실습일</th>
                                    <th>최근 실습일</th>
                                    <th>누적 실습시간</th>
                                    <th>비행운행실습</th>
                                    <th>실습관리</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i = 10; i > 0 ; i--){ %>
                                <tr>
                                    <td class="text-center"><%= i %></td>
                                    <td class="text-center">4학년</td>
                                    <td class="text-center"><a href="#modal-student" data-toggle="modal" class="text-underline">9819155</a></td>
                                    <td class="text-center">김학생</td>
                                    <td class="text-center">1999.02.02</td>
                                    <td class="text-center">여</td>
                                    <td class="text-center">2021-10-01</td>
                                    <td class="text-center">2021-10-01</td>
                                    <td class="text-center">14:00</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-sm-round btn-gray4" data-toggle="modal" data-target="#modal-practice-history">보기</button>
                                    </td>
                                    <td class="text-center">
                                        <a href="traning_detail.html" class="btn btn-sm btn-sm-round btn-gray5">관리</a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                </div>


            </div>
        </div>
        <!-- 모달-->
        <%- include('../modal/modal.ejs')%>
        <!-- 공통모달(로그인/ 삭제 관련) -->
        <%- include('../modal/common.ejs')%>

        <%- include('../layout/_footer.ejs')%>

    </div>


    <script>
        $(document).ready(function(){
            // $("#modal-practice-history").modal("show");
